<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="305dp"
        android:layout_height="163dp"
        android:text="@string/comunicaci_n_por_pictogramas_digitales"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/ImLlevar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="214dp"
        android:layout_height="37dp"
        android:text="@string/todos_los_pictogramas_en_tu_dispositivo_movil_llevalos_a_donde_quieras"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/bsiguiente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImLlevar" />

    <ImageView
        android:id="@+id/bsiguiente"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/derecho"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/boton_siguiente" />

    <ImageView
        android:id="@+id/ImLlevar"
        android:layout_width="168dp"
        android:layout_height="200dp"
        android:src="@drawable/llevar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/pictograma_llevar"/>


</androidx.constraintlayout.widget.ConstraintLayout>